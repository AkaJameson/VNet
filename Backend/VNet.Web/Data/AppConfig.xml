<AppConfig>
	<DbSetting>
		<Mysql>
			<IsEnable>false</IsEnable>
			<Host>localhost</Host>
			<Port>3306</Port>
			<Database>VNet</Database>
			<User>root</User>
			<Password>root</Password>
		</Mysql>
		<Sqlite>
			<IsEnable>true</IsEnable>
			<DbPath>D:\\项目\\My\\VNet\\Backend\\VNet.Web\\bin\\Debug\\Database\\VNet.db</DbPath>
		</Sqlite>
		<SqlServer>
			<IsEnable>false</IsEnable>
			<Host>localhost</Host>
			<Port>1433</Port>
			<Database>VNet</Database>
			<User>sa</User>
			<Password>123456</Password>
		</SqlServer>
		<Oracle>
			<IsEnable>false</IsEnable>
			<Host>localhost</Host>
			<Port>1521</Port>
			<Database>XE</Database>
			<User>system</User>
			<Password>123456</Password>
		</Oracle>
		<Postgre>
			<IsEnable>false</IsEnable>
			<Host>localhost</Host>
			<Port>5432</Port>
			<Database>VNet</Database>
			<User>postgres</User>
			<Password>123456</Password>
		</Postgre>
	</DbSetting>
	<CacheSetting>
		<Redis>
			<IsEnable>false</IsEnable>
			<Host>localhost</Host>
			<Port>6379</Port>
			<Password>123456</Password>
		</Redis>
	</CacheSetting>
	<AllowOrgins value="http://localhost:44390,http://localhost:44391"/>
	<!--全局异常配置-->
	<GlobalException>
		<IsEnable>true</IsEnable>
		<ShowDetail>false</ShowDetail>
	</GlobalException>
	<!--Swagger配置-->
	<Swagger>
		<IsEnable>true</IsEnable>
		<Title>VNet API</Title>
		<Version>v1</Version>
		<Description>基础开发平台 API 文档</Description>
	</Swagger>
	<!--邮件配置-->
	<MailSetting>
		<IsEnable>false</IsEnable>
		<SmtpServer>smtp.example.com</SmtpServer>
		<Port>587</Port>
		<UseSsl>true</UseSsl>
		<User>noreply@example.com</User>
		<Password>emailpassword</Password>
	</MailSetting>
	<!--支付配置-->
	<SmsSetting>
		<Provider>Aliyun</Provider>
		<AccessKeyId>your_key</AccessKeyId>
		<AccessSecret>your_secret</AccessSecret>
		<TemplateCode>SMS_00001</TemplateCode>
	</SmsSetting>
	<!--上传配置-->
	<UploadSetting>
		<SavePath>wwwroot/uploads</SavePath>
		<MaxFileSize>10485760</MaxFileSize>
		<AllowedExtensions>.jpg,.png,.pdf,.word,.xlsx</AllowedExtensions>
	</UploadSetting>
</AppConfig>